APP_ENV=production
PORT=8080

# Postgres (production) — switch from sqlite:/// to postgresql:// when moving to Postgres
DATABASE_URL=sqlite:///careerforge.db
# DATABASE_URL=postgresql://user:pass@host:5432/careerforge

# Gateway JWT (RS256)
# Export PEM from gateway JWKS or copy directly.
JWT_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
# JWT_PUBLIC_KEY_PATH=/run/secrets/gateway_pubkey.pem
JWT_ISSUER=https://gateway.thronoschain.org
JWT_AUDIENCE=careerforge

# Stripe (fiat)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_SUCCESS_URL=https://careerforge.thronoschain.org/billing/success
STRIPE_CANCEL_URL=https://careerforge.thronoschain.org/billing/cancel
STRIPE_PRICE_PACK_30=price_xxx
STRIPE_PRICE_PACK_100=price_xxx
STRIPE_PRICE_PACK_300=price_xxx
STRIPE_PRICE_SUB_STARTER=price_xxx
STRIPE_PRICE_SUB_PRO=price_xxx

# Thronos chain core node
THRONOS_CHAIN_API_URL=https://<core-node>.railway.app
CHAIN_SUBMIT_PATH=/tx/submit

# Attestation signing (secp256k1)
# 64 hex characters (32 bytes raw private key)
ATTESTOR_PRIVKEY_HEX=
ATTESTOR_PUBKEY_HEX=
SERVICE_PREFIX=THRONOS|AI_ATTESTATION|V1|careerforge|
SERVICE_PREFIX_REGISTER=THRONOS|AI_SERVICE_REGISTER|V1|

# AI Core (Render node 4) — leave blank to use built-in stubs
AICORE_API_URL=
AICORE_API_KEY=

# Default model ID written to chain attestations
DEFAULT_MODEL_ID=thronos-ai:careerforge

# Credit costs per action (override defaults)
COST_FULL_KIT=7
COST_CV_ONLY=3
COST_COVER_ONLY=2
COST_ATS_ONLY=1
COST_ATS_SCORE=1
COST_INTERVIEW_PACK=3
COST_OUTREACH_PACK=2
